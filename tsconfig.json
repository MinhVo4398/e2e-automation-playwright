{
	"compilerOptions": {
		"baseUrl": "./",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"paths": {
			"@apis/*": ["src/apis/*"],
			"@fixtures/*": ["src/fixtures/*"],
			"@pages/*": ["src/pages/*"],
			"@helpers/*": ["src/helpers/*"],
			"@data/*": ["src/data/*"],
			"@components/*": ["src/pages/components/*"],
			"@resources/*": ["tests/api/textResources/*"],
			"@dataFactory/*": ["src/apis/lib/dataFactory/*"],
			"@apiUtils/*": ["src/apis/lib/utils/*"],
			"@apiExpect/*": ["src/apis/lib/expect/*"],
			"@utils/*": ["src/shared/utils/*"],
			"@mock/*": ["src/shared/utils/mock/*"],
			"@testData/*": ["test-data/fixtures/*"],
			"@testDataApi/*": ["test-data/fixtures/api/*"],
			"@testDataStatic/*": ["test-data/static/*"],
			"@testDataStaticProduct/*": ["test-data/static/product/*"],
			"@testDataStaticPayment/*": ["test-data/static/payment/*"],
			"@testDataStaticCommon/*": ["test-data/static/common/*"],
			"@testDataVisual/*": ["test-data/fixtures/visual/*"],
			"@testDataFactory/*": ["test-data/factories/*"]
		}
	}
}
