{
	"compilerOptions": {
		"baseUrl": "./",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"paths": {
			"@api/*": ["src/api/*"],
			"@fixtures/*": ["src/fixtures/*"],
			"@pages/*": ["src/pages/*"],
			"@helpers/*": ["src/helpers/*"],
			"@data/*": ["src/data/*"],
			"@components/*": ["src/pages/components/*"],
			"@resources/*": ["tests/api/textResources/*"],
			"@dataFactory/*": ["src/api/lib/dataFactory/*"],
			"@apiHelpers/*": ["src/api/lib/helpers/*"],
			"@apiExpect/*": ["src/api/lib/expect/*"],
			"@utils/*": ["src/shared/utils/*"],
			"@mock/*": ["src/shared/utils/mock/*"],
			"@testData/*": ["test-data/fixtures/*"],
			"@testDataApi/*": ["test-data/fixtures/api/*"],
			"@testDataUi/*": ["test-data/fixtures/ui/*"],
			"@testDataUiProduct/*": ["test-data/fixtures/ui/product/*"],
			"@testDataUiPayment/*": ["test-data/fixtures/ui/payment/*"],
			"@testDataUiCommon/*": ["test-data/fixtures/ui/common/*"],
			"@testDataVisual/*": ["test-data/fixtures/visual/*"],
			"@testDataFactory/*": ["test-data/fixtures/factory/*"]
		}
	}
}
